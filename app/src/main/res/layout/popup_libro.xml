<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_800"
    android:backgroundTint="@color/purple_800">

    <EditText
        android:id="@+id/titulo"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/purple_100"
        android:ems="10"
        android:hint="Título"
        android:inputType="textPersonName"
        android:textColorHint="@color/grisl"
        app:layout_constraintBottom_toTopOf="@+id/autor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/botonAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="90dp"
        android:background="@drawable/round_buttons"
        android:text="Añadir"
        android:textColor="@color/purple_100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/verFoto" />

    <EditText
        android:id="@+id/paginas"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/purple_100"
        android:textColorHint="@color/grisl"
        android:ems="10"
        android:hint="Número páginas"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/genero"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/autor" />

    <EditText
        android:id="@+id/sinopsis"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/purple_100"
        android:ems="10"
        android:hint="Sinopsis"
        android:inputType="textPersonName"
        android:textColorHint="@color/grisl"
        app:layout_constraintBottom_toTopOf="@+id/verFoto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/genero" />

    <EditText
        android:id="@+id/autor"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/purple_100"
        android:textColorHint="@color/grisl"
        android:ems="10"
        android:hint="Autor"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/paginas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo" />

    <Spinner
        android:id="@+id/genero"
        android:layout_width="160dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toTopOf="@+id/sinopsis"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paginas" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="10dp"
        android:text="AÑADIR LIBRO"
        android:textColor="@color/purple_100"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/titulo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/verFoto"
        android:layout_width="80dp"
        android:layout_height="84dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/round_button_border"
        app:layout_constraintBottom_toTopOf="@+id/botonAdd"
        app:layout_constraintEnd_toStartOf="@+id/botonFoto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sinopsis"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/gal" />

    <ImageButton
        android:id="@+id/botonFoto"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/round_button_border"
        app:layout_constraintBottom_toTopOf="@+id/botonAdd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/verFoto"
        app:layout_constraintTop_toBottomOf="@+id/sinopsis"
        app:srcCompat="@drawable/baseline_insert_photo_24" />

</androidx.constraintlayout.widget.ConstraintLayout>